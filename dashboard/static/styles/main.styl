@require 'vars/colors';

html {
    min-height: 100%;
}

body {
    font-family: "Fira Sans";
    margin: 0;
}

.top-bar, main, footer {
    padding-right: 20px;
    padding-left: @padding-right;
}

main {
    margin: 20px auto;
}

section {
    margin-top: 20px;
    margin-bottom: @margin-top;
}

.top-bar {
    background: #1e1e21;
    background-image: radial-gradient(ellipse farthest-side at top left, #00549e 0, rgba(0, 0, 0, 0) 100%);
    background-size: 100% 500px;
    background-repeat: no-repeat;
    background-position: top center;
}

.top-bar-title h1 {
    font-size: 1rem;
}

.top-bar a {
    color: #fff;
}

.top-bar-title a::before {
    width: 38px;
    height: @width;
    background-size: @width;

    background-image: url('../img/firefox-logo.png');
    content: ' ';
    display: block;
    float: left;
    margin-right: 10px;
}

.top-bar-title a {
    position: relative;
    top: 6px;
}

.breadcrumbs a {
    color: $blue;
}

.button {
    background-color: $blue;
    margin: 0;
}

.callout.error {
    background-color: $error;
}
